# ===============================================
# üñ•Ô∏è WINDOW CONFIGURATION
# ===============================================

# Window layout
remember_window_size  yes
initial_window_width  1200
initial_window_height 800

# Window padding
window_padding_width 8
window_padding_height 8

# Window borders
draw_minimal_borders yes
window_border_width 0.5pt
# active_border_color #89B4FA
# inactive_border_color #45475A

# Window margins
single_window_margin_width -1

# Hide window decorations
hide_window_decorations no

# Background opacity
background_opacity 0.95

# Dynamic background opacity
dynamic_background_opacity yes

# ===============================================
# üìë TAB CONFIGURATION
# ===============================================

# Tab bar style
tab_bar_edge bottom
tab_bar_style powerline
tab_powerline_style slanted
tab_title_template "{fmt.fg.red}{bell_symbol}{activity_symbol}{fmt.fg.tab}{title}"

# Tab switching
map ctrl+shift+right next_tab
map ctrl+shift+left previous_tab
map ctrl+shift+t new_tab
map ctrl+shift+q close_tab

# ===============================================
# ‚å®Ô∏è KEYBOARD SHORTCUTS
# ===============================================

# Copy/Paste
map ctrl+shift+c copy_to_clipboard
map ctrl+shift+v paste_from_clipboard

# Font size
map ctrl+plus change_font_size all +2.0
map ctrl+minus change_font_size all -2.0
map ctrl+0 change_font_size all 0

# Window management
map ctrl+shift+enter new_window
map ctrl+shift+w close_window
map ctrl+shift+] next_window
map ctrl+shift+[ previous_window

# Scrolling
map ctrl+shift+up scroll_line_up
map ctrl+shift+down scroll_line_down
map ctrl+shift+page_up scroll_page_up
map ctrl+shift+page_down scroll_page_down
map ctrl+shift+home scroll_home
map ctrl+shift+end scroll_end

# Search
map ctrl+shift+f show_scrollback

# ===============================================
# üîß PERFORMANCE SETTINGS
# ===============================================

# Scrollback
scrollback_lines 10000
scrollback_pager less --chop-long-lines --RAW-CONTROL-CHARS +INPUT_LINE_NUMBER

# Performance
repaint_delay 10
input_delay 3
sync_to_monitor yes

# ===============================================
# üñ±Ô∏è MOUSE CONFIGURATION
# ===============================================

# Mouse
mouse_hide_wait 3.0
url_style curly
open_url_with default
url_prefixes http https file ftp gemini irc gopher mailto news git
detect_urls yes

# Selection
rectangle_select_modifiers ctrl+alt
terminal_select_modifiers shift

# ===============================================
# üîî BELL CONFIGURATION
# ===============================================

# Audio bell
enable_audio_bell no
visual_bell_duration 0.0
window_alert_on_bell yes
bell_on_tab yes
command_on_bell none

# ===============================================
# üéØ ADVANCED FEATURES
# ===============================================

# Shell integration
shell_integration enabled

# Allow remote control
allow_remote_control yes
listen_on unix:/tmp/mykitty

# Clipboard
clipboard_control write-clipboard write-primary

# ===============================================
# üöÄ STARTUP CONFIGURATION
# ===============================================

# Startup session
startup_session none

# Environment variables
env TERM=xterm-kitty

# ===============================================
# üí° CUSTOM COMMANDS
# ===============================================

# Open new window in same directory
map ctrl+shift+n new_window_with_cwd

# Open new tab in same directory  
map ctrl+shift+t new_tab_with_cwd

# ===============================================
# üé® CURSOR CONFIGURATION
# ===============================================

# Cursor shape
cursor_shape block
cursor_beam_thickness 1.5
cursor_underline_thickness 2.0
cursor_blink_interval -1
cursor_stop_blinking_after 15.0

# ===============================================
# üì± LAYOUT CONFIGURATION
# ===============================================

# Enabled layouts
enabled_layouts *

# Layout specific settings
map ctrl+shift+l next_layout

# ===============================================
# END OF CONFIGURATION
# ===============================================


# BEGIN_KITTY_THEME
# Desert Night
include current-theme.conf
# END_KITTY_THEME

# BEGIN_KITTY_FONTS
font_family      family="JetBrainsMono Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font family='JetBrainsMono Nerd Font Mono' style='SemiBold Italic' features='+zero +ss19 +calt +ss01 +ss02'
# END_KITTY_FONTS